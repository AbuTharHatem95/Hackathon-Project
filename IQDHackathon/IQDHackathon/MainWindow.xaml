    <Border CornerRadius="10" Background="{DynamicResource PrimaryBackgroundColor}" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--Header-->
            <Grid Grid.Column="0" Grid.Row="0">
                 <!--Start: Button Close | Restore | Minimize--> 
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="{DynamicResource SPAppFlowDirection}">
                    <Button x:Name="btnClose" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                    <Button x:Name="btnRestore" Margin="5 0" Click="btnRestore_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButtonsStyle}">
                                <Setter Property="Content" Value="{DynamicResource maximize}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}" Value="Maximized">
                                        <Setter Property="Content" Value="{StaticResource restore}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnMinimize" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
                </StackPanel>
                 <!--End: Button Close | Restore | Minimize--> 
            </Grid>

            <!-- عنوان الترحيب -->
            <Label Content="مولدات الذكاء الاصطناعي" FontSize="40" Style="{StaticResource LabelWithShadow}" Foreground="White"
                    Margin="0,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="55"/>

            <!-- الحاوية الرئيسية -->
            <Viewbox Grid.Row="1" Stretch="Uniform" Margin="30,60,30,30">
                <UniformGrid Rows="3" Columns="3" Height="473">

                    <!-- بطاقة - التحليل المالي -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenFinancialAnalyzer">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E3F2FD" Offset="0"/>
                                <GradientStop Color="#1E88E5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="التحليل المالي الذكي" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - مولد العروض التقديمية -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenPresentationGenerator">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E3F2FD" Offset="0"/>
                                <GradientStop Color="#42A5F5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="مولد العروض التقديمية" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - مساعد التقارير -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenReportAssistant">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E8F5E9" Offset="0"/>
                                <GradientStop Color="#66BB6A" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="مساعد التقارير" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - منشئ المواد التعليمية -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenEducationMaterialGenerator">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFFDE7" Offset="0"/>
                                <GradientStop Color="#FFD54F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="منشئ المواد التعليمية" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - مولد سيناريوهات الاختبار -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenTestScenarioGenerator">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFF3E0" Offset="0"/>
                                <GradientStop Color="#FFB74D" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="مولد سيناريوهات الاختبار" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - منشئ الشخصيات القصصية -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenStoryCharacterGenerator">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFEBEE" Offset="0"/>
                                <GradientStop Color="#E57373" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="منشئ الشخصيات القصصية" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - مساعد الصيانة -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenMaintenanceAssistant">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#EEEEEE" Offset="0"/>
                                <GradientStop Color="#616161" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="مساعد الصيانة" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - مساعد تصميم الواجهات -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenUIDesigner">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F3E5F5" Offset="0"/>
                                <GradientStop Color="#BA68C8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="مساعد تصميم واجهات المستخدم" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                    <!-- بطاقة - توليد الصور -->
                    <Border Style="{StaticResource ThreeDCardStyle}" MouseDown="OpenImageGenerator">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F3E5F5" Offset="0"/>
                                <GradientStop Color="#8E24AA" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="توليد الصور" Style="{StaticResource TextWithShadow}"/>
                    </Border>

                </UniformGrid>
