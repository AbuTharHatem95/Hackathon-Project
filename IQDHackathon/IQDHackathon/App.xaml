<Application x:Class="IQDHackathon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IQDHackathon"
             StartupUri="MainWindow.xaml"
             >
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/Icons/Icons.xaml"/>
                <ResourceDictionary Source="Languages/StringLanguage.AR.xaml"/>
                <ResourceDictionary Source="/IQD_UI_Library;component/Themes/Generic.xaml"/>
                <ResourceDictionary>
                    
                    <Style x:Key="ShadowEffectStyle3" TargetType="Image">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="7.5" Opacity="0.5"/>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style  x:Key="BackButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="ToolTip" Value="رجوع"/>
                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <!-- تأثير الظل -->
                                        <Border Background="Transparent" 
                                Opacity="0.5"
                                Margin="3"
                                CornerRadius="10">
                                           
                                        </Border>

                                        <!-- الصورة الأساسية -->
                                        <Image Margin="0,0,0,10" Source="/Assets/logout (1).png" Width="50" Height="50" Style="{StaticResource ShadowEffectStyle3}" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                 
                        <!-- ستايل الظل العام -->
                        <Style x:Key="ShadowEffectStyle" TargetType="Control">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="7.5" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- ستايل البطاقات مع الظل -->
                        <Style TargetType="Border" x:Key="ThreeDCardStyle">
                            <Setter Property="Width" Value="220"/>
                            <Setter Property="Height" Value="120"/>
                            <Setter Property="CornerRadius" Value="15"/>
                            <Setter Property="Padding" Value="15"/>
                            <Setter Property="Margin" Value="17.5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="7.5" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                            <EventSetter Event="MouseEnter" Handler="OnMouseEnter"/>
                            <EventSetter Event="MouseLeave" Handler="OnMouseLeave"/>
                        </Style>

                        <!-- ستايل النصوص مع الظل -->
                        <Style TargetType="TextBlock" x:Key="TextWithShadow">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="7.5" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- ستايل الليبل مع الظل -->
                        <Style TargetType="Label" x:Key="LabelWithShadow">
                            <Setter Property="FontSize" Value="28"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="7" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- ستايل الزر مع الظل -->
                       <Style x:Key="ButtonWithShadow" TargetType="Button">
                           <Setter Property="FontSize" Value="18"/>
                           <Setter Property="FontWeight" Value="Bold"/>
                           <Setter Property="Width" Value="200"/>
                           <Setter Property="Height" Value="50"/>
                           <Setter Property="Background" Value="#42A5F5"/>
                           <Setter Property="Foreground" Value="White"/>
                           <Setter Property="BorderBrush" Value="#1E88E5"/>
                           <Setter Property="BorderThickness" Value="2"/>
                           <Setter Property="Effect">
                               <Setter.Value>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>