<UserControl x:Class="Interface.Pages.UserControles.ctrlCheckBoxBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IQD_UI_Library;assembly=IQD_UI_Library"
             mc:Ignorable="d" 
             Width="700" 
             Height="Auto"
             Background="{DynamicResource PrimaryBackgroundColor}" 
             FlowDirection="{DynamicResource AppFlowDirection}"
             >

    <Grid Height="Auto">
        <Border VerticalAlignment="Center"
                CornerRadius="15" 
                Margin="5, 2, 5, 2" 
                BorderThickness="1" 
                BorderBrush="{DynamicResource TertiaryTextColor}" 
                Padding ="2"
                Width="690"
                >
            <StackPanel Orientation="Horizontal" Height="Auto" Margin="5">
                <CheckBox x:Name="checkBox"  
                          HorizontalAlignment="Right"  
                          Width="650"
                          FontSize="15" 
                          Style="{StaticResource ModernCheckBox}" 
                          FlowDirection="{DynamicResource AppFlowDirection}" 
                          Foreground="{DynamicResource PrimaryTextColor}" 
                          IsChecked="{Binding IsCheckedProperty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          />
                
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
