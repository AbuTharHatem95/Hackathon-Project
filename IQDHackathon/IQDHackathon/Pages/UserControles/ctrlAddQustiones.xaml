<UserControl x:Class="Interface.Pages.UserControles.AddQustiones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IQD_UI_Library;assembly=IQD_UI_Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             FlowDirection="{StaticResource AppFlowDirection}"
             Background="{DynamicResource PrimaryBackgroundColor}"
             >

    <Grid  >
        <Grid x:Name="MainGrid">
            
            
            <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>


            <!--الرجوع من الصفحة-->
            <Viewbox Width="30" Height="30" Grid.Row="0" 
                     RenderOptions.BitmapScalingMode="HighQuality" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     Margin="9,0,0,0">
                <Button x:Name="btnRetuntomainmenue" 
              Click="btnRetuntomainmenue_Click" 
              Style="{StaticResource BackButtonStyle}"
              Cursor="Hand"
              />
            </Viewbox>


            <ScrollViewer HorizontalScrollBarVisibility="Auto"  Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                <ListBox x:Name="ItemsListBox" 
                    Background="{DynamicResource PrimaryBackgroundColor}"
                    HorizontalContentAlignment="Center"
                    HorizontalAlignment="Stretch"
                    FontSize="20"
                    Foreground="{DynamicResource SecundaryTextColor}"
                    Padding="100"
                    >
                </ListBox>
        </ScrollViewer>

            <!-- اعادة توليد اسئلة -->
            <local:IQD_Button x:Name="btnRelodGenric"
                Margin="10,10,0,10" 
                Grid.Row="2" 
                Style="{StaticResource ButtonsWithIconStyle}"
                HorizontalAlignment="Stretch"
                Content="اعادة توليد اسئلة"
                Icon="/Assets/export.png"
                Click="btnRelodGenric_Click"
                />

            <!-- انشاء اسئلة -->
        <local:IQD_Button x:Name="btnAddQustion"
        Margin="10,10,0,10" 
        Grid.Row="3" 
        Style="{StaticResource ButtonsWithIconStyle}"
        HorizontalAlignment="Stretch"
        Content="انشاء اسئلة"
        Icon="/Assets/export.png"
        Click="btnAddQustion_Click"
        />
        </Grid>
        
        <Grid x:Name="SubGrid" Visibility="Collapsed"></Grid>
        
    </Grid>

</UserControl>
    
    
    
    
    
    
    
    
    
    
    
    

