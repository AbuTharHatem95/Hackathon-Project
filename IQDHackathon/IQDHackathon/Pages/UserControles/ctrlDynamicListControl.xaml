<UserControl x:Class="Interface.Pages.UserControles.ctrlDynamicListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface.Pages.UserControles"
             mc:Ignorable="d" 
             Background="{DynamicResource PrimaryBackgroundColor}"
             FlowDirection="{DynamicResource AppFlowDirection}"
             >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- عنوان القائمة -->
        <TextBlock x:Name="txtTitle" FontSize="18" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <!-- ScrollViewer يحتوي على ListBox -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Center"
                     
                      >
            <ListBox x:Name="ItemsListBox" 
                     Background="{DynamicResource PrimaryBackgroundColor}" 
                     VerticalContentAlignment="Center"
                     Margin="10" 
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Center"
                     />
        </ScrollViewer>
    </Grid>

</UserControl>
